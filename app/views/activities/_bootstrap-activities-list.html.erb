

 
<% @activities.each do |activity| %>
 <div class="col-xs-12 col-sm-4">
  <% act = activity.events.where("start_date > ?", Date.today) %>
  <% act.each do |ac| %>
    <%= link_to activity_path(ac.activity) do %>
      <div class="index-search-result">
        <% if ac.activity.photos.first %>
          <div class="card" style="background-image: linear-gradient(135deg, rgba(0,0,0,0.6) 0%, rgba(0,0,0,0.3) 50%), url('<%= cl_image_path ac.activity.photos.first.path, width: 200, height: 150, crop: :fit %>');">
          </div>
        <% end %>
        <div class="card-category">
          <p><%= ac.activity.title.truncate(30) %></p>
        </div>
        <div>
          <span class="fas fa-map-marker">
            <p><%= ac.activity.address.truncate(17) %></p>
          </span>
        </div>
        <div class="card-description">
          <p><%= ac.activity.description.truncate(179)%></p>
        </div>
        <div class="result-price">
          <span class="fas fa-euro-sign">
            <p><%= ac.activity.price %></p>
          </span>
        </div>
      </div>
        </div>
    <% end %>
  <% end %>
<% end %>




