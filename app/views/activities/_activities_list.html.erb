
<% @activities.each do |activity| %>
<%= link_to activity_path(activity) do %>
  <div class="index-search-result">
    <% if activity.photos.first %>
    <div class="result-image" style="background-image: linear-gradient(135deg, rgba(0,0,0,0.6) 0%, rgba(0,0,0,0.3) 50%), url('<%= cl_image_path activity.photos.first.path, width: 600, height: 600, crop: :fit, :effect=>"colorize:1", :color=>"#dde1ff"  %>');">
      <div class="results-rating-stars">
        <% rating = (3..5).to_a.sample %>
        <% rating.times do %>
        <i class="fa fa-star" style="color: #f99d78"> </i>
        <% end %>
      </div>
    </div>
    <% end %>
    <div class="result-title">
      <span><%= activity.title.truncate(30) %></span>
    </div>
    <div class="result-address">
      <span class="fas fa-map-marker">
      </span>
      <span class="normal-text"><%= activity.address.truncate(30) %>
      </span>
    </div>
    <div class="result-description">
      <p><%= activity.description.truncate(179)%></p>
    </div>
  </div>
  <% end %>
<% end %>



