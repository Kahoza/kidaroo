
<%= simple_form_for [@event, Message.new] do |f|%>
<%= f.input :content, label: false, placeholder: "Your message" %>
<%= f.button :submit, "Send", class: "btn-success" %>
<% end %>

<%= @event.activity.title %> <br>
<%= @event.activity.price %> <br>
<%= @event.activity.user.email %> <br>
<%= @event.start_date %> <br>
<%= @event.end_date %> <br>
<% @event.bookings.each do |booking| %> <br>
<%= booking.user.email  %>
<%= booking.user.avatar  %>
<%= booking.user.first_name  %>
<% end %>


<ul>
  <% @event.messages.each do |message| %>
  <li><%= message.content %></li>
  <% end %>
</ul>