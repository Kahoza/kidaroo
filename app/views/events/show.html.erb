<div class="text-center">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-6 col-sm-offset-3">
        <%=  simple_form_for [@message, @event] do |f|%>
        <%= f.input :title, label: false, placeholder: "Title" %>
        <%= f.button :submit, "Submit", class: "btn-success" %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<%= @event.activity.title %> <br>
<%= @event.activity.price %> <br>
<%= @event.activity.user.email %> <br>
<%= @event.start_date %> <br>
<%= @event.end_date %> <br>
<% @event.bookings.each do |booking| %> <br>
<%= booking.user.email  %>
<%= booking.user.avatar  %>
<%= booking.user.first_name  %>
<% end %>